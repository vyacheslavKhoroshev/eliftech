generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Test {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  hello              String  
}

model Quiz {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String  
  description       String   
  questions         Question[]
  complections      Complection[]
  questionsAmount   Int
  completionsAmount Int
}

model Question {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  question          String
  type              String
  choices           String[]
  quiz              Quiz     @relation(fields: [quizId], references: [id])
  quizId            String   @db.ObjectId
}


model Complection {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  answers           Answer[]
  time              String
  quiz              Quiz      @relation(fields: [quizId], references: [id])
  quizId            String    @db.ObjectId
}

model Answer {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  answer            String
  complection       Complection   @relation(fields: [complectionId], references: [id])
  complectionId     String        @db.ObjectId
}
